            <li>Permit Procurement</li>
            <li>Site Selection</li>
            <li>Space Planning and Schematic Layout</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md col-lg-7 mb-md-5">
      <div class="to-edge-left to-edge-right to-edge-right-mega">
        <a href="#modalVideo" class="video-preview" data-toggle="modal">
          <%= image_tag 'home/built-to-evolve.jpg',
            class: 'img-fluid' %>
