<a
  href="#modalVideo-<%= video %>"
  class="video-preview <%= locals[:class_name] %>"
  data-toggle="modal">
  <%= image %>
</a>


<% content_for :foot do %>
<div class="modal fade youtube-modal" id="modalVideo-<%= video %>" tabindex="-1"
  role="dialog" aria-labelledby="modalVideoTitle-<%= video %>" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalVideoTitle-<%= video %>">
          <%= title %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item youtube-modal-iframe"
            data-src="https://www.youtube.com/embed/<%= video %>?autoplay=1"
            allowfullscreen allowautoplay allow="autoplay; fullscreen"></iframe>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
