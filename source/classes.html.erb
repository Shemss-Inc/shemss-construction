title: Classes
---

<div class="jumbotron classes-banner mb-0 mb-md-5 px-0">
  <div class="container-fluid text-center text-uppercase text-white">
    <p class="h3"><span class="classes-banner-date">May 17 2019</span></p>
    <h1 class="display-1">Hands on Class</h1>
    <a class="btn btn-primary btn-lg" href="#sign-up" role="button">Sign Up</a>
  </div>
</div>

<div class="container-fluid">
  <div class="row flex-row-reverse">
    <div class="col-md">
      <div class="text-uppercase text-white bg-dark p-3 p-sm-4 to-edge-right classes-overlap-right">
        <h2 class="h4 hul">Gain knowledge</h2>
        <p>
          Learn a skill in construction from experianced contractors and
          builders. Roll up your sleaves for a hands on experiance with Shemss
          Construction.
        </p>
      </div>
    </div>

    <div class="col-sm">
      <div class="to-edge-left classes-overlap-left">
        <a href="#modalVideo" class="video-preview" data-toggle="modal">
          <%= image_tag 'home/built-to-evolve.jpg',
            class: 'img-fluid' %>
        </a>
      </div>
    </div>
  </div>

  <div class="anchor" id="sign-up"></div>

  <div class="bg-light py-5 px-5">
    <!-- Begin Mailchimp Signup Form -->
    <div id="mc_embed_signup">
      <form
        action="https://shemss.us20.list-manage.com/subscribe/post?u=9dfd16dd11e3f7007d94ad890&amp;id=17e8ddc27f"
        method="post"
        id="mc-embedded-subscribe-form"
        name="mc-embedded-subscribe-form"
        class="validate"
        target="_blank"
        novalidate
      >
        <div id="mc_embed_signup_scroll">
          <h2>Subscribe to our mailing list</h2>

          <div class="mc-field-group form-group">
            <label for="mce-EMAIL">
              Email Address  <abbr title="required" class="asterisk">*</abbr>
            </label>
            <input type="email" value="" name="EMAIL"
              class="form-control required email" id="mce-EMAIL">
          </div>
          <div class="mc-field-group form-group">
            <label for="mce-FNAME">First Name </label>
            <input type="text" value="" name="FNAME"
              class="form-control" id="mce-FNAME">
          </div>
          <div class="mc-field-group form-group">
            <label for="mce-LNAME">Last Name </label>
            <input type="text" value="" name="LNAME"
              class="form-control" id="mce-LNAME">
          </div>
          <div class="mc-field-group size1of2 form-group">
            <label for="mce-PHONE">Phone Number </label>
            <input type="tel" name="PHONE"
              class="form-control" value="" id="mce-PHONE">
          </div>
          <div class="mc-field-group">
            <input type="hidden" value="1" name="group[345][1]"
              id="mce-group[345]-345-0" checked>
          </div>
          <div id="mce-responses" class="clear">
            <div class="response" id="mce-error-response" style="display:none"></div>
            <div class="response" id="mce-success-response" style="display:none"></div>
          </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
          <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_9dfd16dd11e3f7007d94ad890_17e8ddc27f" tabindex="-1" value=""></div>
          <div class="clear form-group">
            <p>
              By clicking “Subscribe” you signify that you agree to the
              <%= link_to 'Terms and Condition', '#' %>
            </p>
            <input type="submit" value="Subscribe" name="subscribe"
              id="mc-embedded-subscribe" class="button btn btn-primary">
          </div>
        </div>
      </form>
    </div>

    <!--End mc_embed_signup-->
  </div>
</div>

<%= partial 'layouts/video-modal' %>

<% content_for :foot, javascript_include_tag('home') %>
